(function() {
  $(document).on('ready page:load', function() {
    $('.table-pagination-per-page select').change(function() {
      return $(this).parents('form').submit();
    });
    $('.table-search-field .clear-search-btn').click(function() {
      $(this).prev().val('');
      return $(this).parents('form').submit();
    });
    $('.table-card input[type=search]').blur(function() {
      var $parent;
      $parent = $(this).parent();
      if ($(this).val() === '') {
        $parent.removeClass('has-value');
      }
      return $parent.removeClass('is-focused');
    });
    $('.table-card input[type=search]').focus(function() {
      return $(this).parent().addClass('is-focused has-value');
    });
    $('.table-card input[type=search]').each(function() {
      if ($(this).val() !== '') {
        return $(this).parent().addClass('has-value');
      }
    });
    $('.selectpicker').selectpicker();
    $('.switch').bootstrapSwitch();
    return $('.nav-tabs a').click(function(e) {
      e.preventDefault();
      return $(this).tab('show');
    });
  });

}).call(this);
