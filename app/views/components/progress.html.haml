= title 'Progress Bar'
%blockquote UiBibz::Ui::Core::Progresses::ProgressBar
%p.bd-callout Provide up-to-date feedback on the ui_progress_bar of a workflow or action with simple yet flexible ui_progress_bar bars.

= code 'progress'

= component_options do |co|
  - co.status_link
  - co.list 'value', types: 'number'
  - co.list 'striped', types: 'boolean'
  - co.list 'animated', types: 'boolean'

- @sections = sections do |s|
  - s.section title: "Progress Bar" do
    = example do |c|
      - c.header do
        = ui_progress_bar 0
        = ui_progress_bar '25%', { status: :primary, value: 25 }, { class: 'my-progress' }
        = ui_progress_bar({ status: :primary, value: 50 }, { class: 'my-progress'}) do
          = 50
      - c.code do
        ui_progress_bar 0
         
        ui_progress_bar "25%", { status: :primary, value: 25 }, { class: 'my-progress' }
         
        ui_progress_bar({ status: :primary, value: 50 }, { class: 'my-progress'}) do
          50%
        end
      - c.html do
        <progress class="progress" max="100" value="0">0</progress>
        <progress class="my-progress ui_progress_bar-primary ui_progress_bar" max="100" value="25">25%</progress>
        <progress class="my-progress ui_progress_bar-primary ui_progress_bar" max="100" value="50">50
        </progress>

  - s.section title: "status" do
    = example do |c|
      - c.header do
        = ui_progress_bar 10, status: :primary
        = ui_progress_bar 25, status: :success
        = ui_progress_bar 50, status: :warning
        = ui_progress_bar 75, status: :danger
        = ui_progress_bar 100, status: :info
      - c.code do
        ui_progress_bar 10, status: :primary
        ui_progress_bar 25, status: :success
        ui_progress_bar 50, status: :warning
        ui_progress_bar 75, status: :danger
        ui_progress_bar 100, status: :info
      - c.html do
        <progress class="progress-primary ui_progress_bar" max="100" value="10">10</progress>
        <progress class="progress-success ui_progress_bar" max="100" value="25">25</progress>
        <progress class="progress-warning ui_progress_bar" max="100" value="50">50</progress>
        <progress class="progress-danger ui_progress_bar" max="100" value="75">75</progress>
        <progress class="progress-info ui_progress_bar" max="100" value="100">100</progress>

  - s.section title: "type" do
    = example do |c|
      - c.header do
        = ui_progress_bar 10, status: :primary, type: :line
        = ui_progress_bar 25, status: :success, type: :line
        = ui_progress_bar 50, status: :warning, type: :line
        = ui_progress_bar 75, status: :danger, type: :line
        = ui_progress_bar 100, status: :info, type: :line
      - c.code do
        ui_progress_bar 10, status: :primary, type: :line
        ui_progress_bar 25, status: :success, type: :line
        ui_progress_bar 50, status: :warning, type: :line
        ui_progress_bar 75, status: :danger, type: :line
        ui_progress_bar 100, status: :info, type: :line
      - c.html do
        <progress class="progress-primary progress-bar-line ui_progress_bar" max="100" value="10">10</progress>
        <progress class="progress-success progress-bar-line ui_progress_bar" max="100" value="25">25</progress>
        <progress class="progress-warning progress-bar-line ui_progress_bar" max="100" value="50">50</progress>
        <progress class="progress-danger  progress-bar-line ui_progress_bar" max="100" value="75">75</progress>
        <progress class="progress-info    progress-bar-line ui_progress_bar" max="100" value="100">100</progress>

  - s.section title: "Striped" do
    = example do |c|
      - c.header do
        = ui_progress_bar 10, status: :primary, striped: true
        = ui_progress_bar 25, status: :success, striped: true
        = ui_progress_bar 50, status: :warning, striped: true
        = ui_progress_bar 75, status: :danger, striped: true
        = ui_progress_bar 100, status: :info, striped: true
      - c.code do
        ui_progress_bar 10, status: :primary, striped: true
        ui_progress_bar 25, status: :success, striped: true
        ui_progress_bar 50, status: :warning, striped: true
        ui_progress_bar 75, status: :danger, striped: true
        ui_progress_bar 100, status: :info, striped: true
      - c.html do
        <progress class="progress-primary ui_progress_bar ui_progress_bar-striped" max="100" value="10">10</progress>
        <progress class="progress-success ui_progress_bar ui_progress_bar-striped" max="100" value="25">25</progress>
        <progress class="progress-warning ui_progress_bar ui_progress_bar-striped" max="100" value="50">50</progress>
        <progress class="progress-danger ui_progress_bar ui_progress_bar-striped" max="100" value="75">75</progress>
        <progress class="progress-info ui_progress_bar ui_progress_bar-striped" max="100" value="100">100</progress>

  - s.section title: "Animated" do
    = example do |c|
      - c.header do
        = ui_progress_bar 10, status: :primary, striped: true, animated: true
        = ui_progress_bar 25, status: :success, striped: true, animated: true
        = ui_progress_bar 50, status: :warning, striped: true, animated: true
