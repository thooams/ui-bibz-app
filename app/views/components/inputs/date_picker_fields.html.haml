- titles = ["Date picker Field", "Date picker with glyphs", "Date picker Field range", "Date picker Field range with glyph", "Date picker Field date options"]
= content_for :third_nav do
  %h2 Contents
  = subnav class: 'secondary-nav' do |n|
    - titles.each do |t|
      - n.link t

= section title: titles.shift do
  = example do |e|
    - e.header do
      = date_picker_field 'search'
    - e.code do
      date_picker_field 'search'
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: titles.shift do
  = example do |e|
    - e.header do
      = date_picker_field 'date_at', append: glyph('calendar'), prepend: glyph('pencil')
    - e.code do
      date_picker_field 'date_at', append: glyph('calendar'), prepend: glyph('pencil')
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: titles.shift do
  = example do |e|
    - e.header do
      = date_picker_field 'range', range: 'to'
    - e.code do
      date_picker_field 'range', range: 'to'
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: titles.shift do
  = example do |e|
    - e.header do
      = date_picker_field 'range', range: glyph('calendar-minus-o'), append: glyph('car'), prepend: glyph('pencil')
    - e.code do
      date_picker_field 'range', range: glyph('calendar-minus-o'), append: glyph('car'), prepend: glyph('pencil')
    - e.footer do
      = documentation_link 'Documentation', '#'

