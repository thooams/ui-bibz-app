        = switch_field 'examplecolor', { on_color: :success, off_color: :danger }
      - e.code do
        switch_field 'examplecolor', { on_color: :success, off_color: :danger }
      - e.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Text" do
    = example do |e|
      - e.header do
        = switch_field 'exampletext', { on_text: "ExampleOn", off_text: "ExampleOff" }
      - e.code do
        switch_field 'exampletext', { on_text: "ExampleOn", off_text: "ExampleOff" }
      - e.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Label" do
    = example do |e|
      - e.header do
        = switch_field 'examplelabel', { label_text: "MyText" }
        = switch_field 'examplelabel', { label_text: glyph('diamond') }
      - e.code do
        switch_field 'examplelabel', { label_text: 'MyText' }
        switch_field 'examplelabel', { label_text: glyph('diamond') }
      - e.footer do
        = documentation_link 'Documentation', '#'
        |
        = documentation_link 'Glyph', '/components/glyphs'
