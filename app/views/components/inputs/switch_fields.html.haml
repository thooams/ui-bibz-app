        = switch_field 'exampleanimate', { animate: true }
        = switch_field 'exampleanimate', { animate: false }
      - e.code do
        switch_field 'exampleanimate', { animate: true }
        switch_field 'exampleanimate', { animate: false }
      - e.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Color" do
    = example do |e|
