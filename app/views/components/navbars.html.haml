%h1 Navbars

= content_for :third_nav do
  %h2 Content
  = nav class: 'secondary-nav' do |n|
    - n.link 'Navbar', url: '#navbar'
    - n.link 'Color', url: '#color'

= section title: "Navbar" do
  = example do |c|
    - c.header do
      = navbar title: 'Navbar' do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#active', status: :active
          - n.link url: '#link', class: 'my-link' do
            Features
          - n.link 'Princing', url: '#another-link'
          - n.dropdown 'Dropdown' do |d|
            - d.link "Action 1", url: '#action'
            - d.link url: '#another-action' do
              = "Action 2"
            - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
              = "Action 3"
        - nb.form '/search', { type: :form_tag, position: :right } do
          = textfield 'Search'
          = button 'Search', state: :success, outline: true
    - c.code do
      navbar title: 'Navbar' do |nb|
        nb.nav do |n|
          n.link 'Home', url: '#active', status: :active
          n.link url: '#link', class: 'my-link' do
            Features
          end
          n.link 'Princing', url: '#another-link'
          n.dropdown 'Dropdown' do |d|
            d.link "Action 1", url: '#action'
            d.link url: '#another-action' do
              "Action 2"
            end
            d.link({ url: '#separate-link'}, { class: 'my-link'}) do
              "Action 3"
            end
          end
        end
        nb.form '/search', { type: :form_tag, position: :right } do
          textfield 'Search'
          button 'Search', state: :success, outline: true
        end
      end
    - c.footer do
      = documentation_link 'Documentation', '#'

= section title: "Color" do
  = example do |c|
    - c.header do
      = navbar title: 'Navbar', state: :primary, type: :dark do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#home'
      %br
      = navbar title: 'Navbar', state: :inverse, type: :dark do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#home'
      %br
      = navbar({ title: 'Navbar' }, { style: "background-color: #e3f2fd;"}) do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#home'
    - c.code do
      navbar title: 'Navbar', state: :primary, type: :dark do |nb|
        nb.nav do |n|
          n.link 'Home', url: '#home'
        end
      end
       
      navbar title: 'Navbar', state: :inverse, type: :dark do |nb|
        nb.nav do |n|
          n.link 'Home', url: '#home'
        end
      end
       
      navbar({ title: 'Navbar' }, { style: "background-color: #e3f2fd;"}) do |nb|
        nb.nav do |n|
          n.link 'Home', url: '#home'
        end
      end
    - c.footer do
      = documentation_link 'Documentation', '#'

