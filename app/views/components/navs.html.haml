%h1 Alerts, notify

= content_for :third_nav do
  %h2 Content
  = nav class: 'secondary-nav' do |n|
    - n.link 'Nav', url: '#nav'
    - n.nav do |na|
      - na.link 'Notify options', url: '#notify-options'

= section title: "Nav" do
  = example do |c|
    - c.header do
      = nav do |n|
        - n.link 'Active', url: '#active', status: :active
        - n.link url: '#link', class: 'my-link' do
          Link
        - n.nav do |na|
          - na.link 'Another link', url: '#another-link'
          - na.link 'Disabled', url: '#disabled', status: :disabled
        - n.link 'Another link 2', url: '#another-link2'
        - n.link 'Another link 3', url: '#another-link3'
    - c.code do
      nav do |n|
        n.link 'Active', url: '#active', status: :active
        n.link({ url: '#link' }, { class: 'my-link'}) do
          "Link"
        end
        n.nav do |na|
          na.link 'Another link', url: '#another-link'
          na.link 'Disabled', url: '#disabled', status: :disabled
        end
        n.link 'Another link 2', url: '#another-link2'
        n.link 'Another link 3', url: '#another-link3'
      end
    - c.footer do
      = documentation_link 'Documentation', '#'

