:markdown
  # Glyphs
  Includes over 250 glyphs in font format from the Glyphicon Halflings set.
- @sections = sections do |s|
  - s.section title: "Glyph" do
    = example do |c|
      - c.header do
        = glyph 'diamond'
      - c.code do
        glyph 'diamond'
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Size" do
    :markdown
      L'argument size accepte pour argument un nombre ou `:xs` `:md` `:lg`
    = example do |c|
      - c.header do
        = glyph 'diamond', size: :xs
        = glyph 'diamond', size: 2
        = glyph 'diamond', size: :md
        = glyph 'diamond', size: :lg
      - c.code do
        glyph 'diamond', size: :xs
        glyph 'diamond', size: 2
        glyph 'diamond', size: :md
        glyph 'diamond', size: :lg
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Type" do
    = example do |c|
      :markdown
        * `fw` : fixed width icon
      - c.header do
        = glyph 'diamond', type: 'fw'
      - c.code do
        glyph 'diamond', type: 'fw'
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "State" do
    = example do |c|
      - c.header do
        - %i(primary secondary warning info success danger).each do |state|
          = glyph 'diamond', state: state
      - c.code do
        glyph 'diamond', state: :primary
        glyph 'diamond', state: :secondary
        glyph 'diamond', state: :warning
        glyph 'diamond', state: :info
        glyph 'diamond', state: :success
        glyph 'diamond', state: :danger
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Rotate" do
    = example do |c|
      - c.header do
        = glyph 'diamond', rotate: 90
        = glyph 'diamond', rotate: 180
        = glyph 'diamond', rotate: 270
      - c.code do
        glyph 'diamond', rotate: 90
        glyph 'diamond', rotate: 180
        glyph 'diamond', rotate: 270
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Flip" do
    = example do |c|
      - c.header do
        = glyph 'diamond', flip: :horizontal
        = glyph 'diamond', flip: :vertical
      - c.code do
        glyph 'diamond', flip: :horizontal
        glyph 'diamond', flip: :vertical
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Stack" do
    = example do |c|
      - c.header do
        = glyph 'square', stack: 2
        = glyph 'diamond', stack: 1, state: :danger
      - c.code do
        glyph 'square', stack: 2
        glyph 'diamond', stack: 1, state: :danger
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Options" do
    = example do |c|
      - c.header do
        = glyph({ name: 'diamond', size: :md })
      - c.code do
        glyph { name: 'diamond', size: :md }
      - c.footer do
        = documentation_link 'Documentation', '#'

= @sections.render
