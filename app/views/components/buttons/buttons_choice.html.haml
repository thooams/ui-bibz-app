%h1 Buttons choice

%h2 Content
= nav class: 'secondary-nav' do |n|
  - n.link 'Button', url: '#button'
  - n.link 'Button Options', url: '#button-options'
  - n.nav do |na|
    - na.link 'Outline', url: '#outline'


= section title: "Checkboxes" do
  = example do |c|
    - c.header do
      = button_group do
        = button_choice 'Checkbox 1', state: :primary
        = button_choice 'Checkbox 2', state: :primary, status: :active
    - c.code do
      button_group do
        button_choice 'Checkbox 1', state: :primary
        button_choice 'Checkbox 2', state: :primary, status: :active
      end
    - c.footer do
      = documentation_link 'Documentation', '#'

= section title: "Radios" do
  = example do |c|
    - c.header do
      = button_group do
        = button_choice 'Radio 1', state: :primary, type: :radio
        = button_choice 'Radio 2', state: :primary, status: :active, type: :radio
    - c.code do
      button_group do
        button_choice 'Radio 1', state: :primary, type: :radio
        button_choice 'Radio 2', state: :primary, status: :active, type: :radio
      end
    - c.footer do
      = documentation_link 'Documentation', '#'
