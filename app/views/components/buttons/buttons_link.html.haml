%h1 Buttons link

= content_for :third_nav do
  %h2 Contents
  = nav class: 'secondary-nav' do |n|
    - n.link 'button_link', url: '#button_link'
    - n.link 'button_link options', url: '#button_link-options'
    - n.nav do |na|
      - na.link 'Outline', url: '#outline'
      - na.link 'Size', url: '#size'
      - na.link 'Type', url: '#type'
      - na.link 'Status', url: '#status'
    - n.link 'Options and html_options', url: '#options-and-html-options'


= section title: "Button link" do
  = example do |c|
    - c.header do
      = button_link 'Primary', url: '#primary', state: :primary
      = button_link 'Secondary', url: '#secondary', state: :secondary
      = button_link 'Success', url: '#success', state: :success
      = button_link 'Warning', url: '#warning', state: :warning
      = button_link 'Danger', url: '#danger', state: :danger
      = button_link 'Link', url: '#link', state: :link
    - c.code do
      button_link 'Primary', url: '#primary', state: :primary
      button_link 'Secondary', url: '#secondary', state: :secondary
      button_link 'Success', url: '#success', state: :success
      button_link 'Warning', url: '#warning', state: :warning
      button_link 'Danger', url: '#danger', state: :danger
      button_link 'Link', url: '#link', state: :link
    - c.footer do
      = documentation_link 'Documentation', '#'

