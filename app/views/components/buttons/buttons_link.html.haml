:markdown
  # Buttons link
  Make a button with a link (url).
- @sections = sections do |s|
  - s.section title: "Button link" do
    = example do |c|
      - c.header do
        = button_link 'Primary', url: '#primary', state: :primary
        = button_link 'Secondary', url: '#secondary', state: :secondary
        = button_link 'Success', url: '#success', state: :success
        = button_link 'Warning', url: '#warning', state: :warning
        = button_link 'Danger', url: '#danger', state: :danger
        = button_link 'Link', url: '#link', state: :link
      - c.code do
        button_link 'Primary', url: '#primary', state: :primary
        button_link 'Secondary', url: '#secondary', state: :secondary
        button_link 'Success', url: '#success', state: :success
        button_link 'Warning', url: '#warning', state: :warning
        button_link 'Danger', url: '#danger', state: :danger
        button_link 'Link', url: '#link', state: :link
      - c.html do
        <a class="btn-primary btn" href="#primary">Primary</a>
        <a class="btn-secondary btn" href="#secondary">Secondary</a>
        <a class="btn-success btn" href="#success">Success</a>
        <a class="btn-warning btn" href="#warning">Warning</a>
        <a class="btn-danger btn" href="#danger">Danger</a>
        <a class="btn-link btn" href="#link">Link</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Outline", tag: :h3 do
    = example do |c|
      - c.header do
        = button_link 'Primary', url: '#', state: :primary, outline: true
        = button_link 'Secondary', url: '#', state: :secondary, outline: true
        = button_link 'Success', url: '#', state: :success, outline: true
        = button_link 'Warning', url: '#', state: :warning, outline: true
        = button_link 'Danger', url: '#', state: :danger, outline: true
      - c.code do
        button_link 'Primary', url: '#', state: :primary, outline: true
        button_link 'Secondary', url: '#', state: :secondary, outline: true
        button_link 'Success', url: '#', state: :success, outline: true
        button_link 'Warning', url: '#', state: :warning, outline: true
        button_link 'Danger', url: '#', state: :danger, outline: true
      - c.html do
        <a class="btn-primary-outline btn" href="#primary">Primary</a>
        <a class="btn-secondary-outline btn" href="#secondary">Secondary</a>
        <a class="btn-success-outline btn" href="#success">Success</a>
        <a class="btn-warning-outline btn" href="#warning">Warning</a>
        <a class="btn-danger-outline btn" href="#danger">Danger</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Size", tag: :h3 do
    = example do |c|
      - c.header do
        = button_link 'Large button link', url: 'large-button-link', size: :lg
        = button_link 'Medium button link', url: '#medium-button-link'
        = button_link 'Small button link', url: '#small-button-link', size: :sm
      - c.code do
        button_link 'Large button link', url: '#large-button-link', size: :lg
        button_link 'Medium button link', url: '#medium-button-link'
        button_link 'Small button link', url: '#small-button-link', size: :sm
      - c.html do
        <a class="btn-primary btn btn-lg" href="large-button-link">Large button link</a>
        <a class="btn-primary btn" href="#medium-button-link">Medium button link</a>
        <a class="btn-primary btn btn-sm" href="#small-button-link">Small button link</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Type", tag: :h3 do
    = example do |c|
      - c.header do
        = button_link 'Block level button link', url: '#block-level-button-link', state: :primary, type: :block
        = button_link 'Block level button link', url: '#block-level-button-link', state: :secondary, type: :block
      - c.code do
        button_link 'Block level button link', url: '#block-level-button-link', state: :primary, type: :block
        button_link 'Block level button link', url: '#block-level-button-link', state: :secondary, type: :block
      - c.html do
        <a class="btn-primary btn btn-block" href="#block-level-button-link">Block level button link</a>
        <a class="btn-secondary btn btn-block" href="#block-level-button-link">Block level button link</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Status", tag: :h3 do
    = example do |c|
      - c.header do
        = button_link 'Primary', url: '#active', status: :active
        = button_link 'Primary', url: '#disabled', status: :disabled
      - c.code do
        button_link 'Primary', url: '#active', status: :active
        button_link 'Primary', url: '#disabled', status: :disabled
      - c.html do
        <a class="active btn-primary btn" href="#active">Primary</a>
        <a class="disabled btn-primary btn" href="#disabled">Primary</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Options and html options" do
    = example do |c|
      - c.header do
        = button_link 'Success', { url: '#', state: :success }, { class: 'button_link' }
      - c.code do
        button_link 'Primary', { url: '#', state: :success }, { class: 'button_link' }
      - c.html do
        <a class="button_link btn-success btn" href="#">Success</a>
      - c.footer do
        = documentation_link 'Documentation', '#'

= @sections.render
