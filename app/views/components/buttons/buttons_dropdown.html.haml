:markdown
  # Buttons dropdown
= extend_of_component 'button_dropdown'

- @sections = sections do |s|
  - s.section title: "Button dropdown" do
    :markdown
      Le bouton dropdown accepte plusieurs type de block :

      * [Link](../components/dropdowns#link)
      * [Divider](../components/dropdowns#divider)
      * [Header](../components/dropdowns#header)
      * [Html](../components/dropdowns#html)

    %p= short_extend_of_component 'link'
    = example do |c|
      - c.header do
        - %i(primary secondary danger warning info success).each do |state|
          = button_dropdown state.to_s.titleize, state: state do |bd|
            - bd.link "Action", url: '#action'
            - bd.link url: '#another-action' do
              = "Another action"
            - bd.divider
            - bd.header 'Header'
            - bd.link({ url: '#separate-link'}, { class: 'my-link'}) do
              = "Separate link"
      - c.code do
        button_dropdown 'Primary' do |bd|
          bd.link "Action", url: '#action'
          bd.link "Another action", url: '#another-action'
          bd.link url: '#another-action' do
            "Another action"
          end
          bd.divider
          bd.header 'Header'
          bd.link "Separate link", url: '#separate-link'
          bd.link({ url: '#separate-link'}, { class: 'my-link'}) do
            "Separate link"
          end
        end
      - c.footer do
        = documentation_link 'Documentation', '#'


  - s.section title: "Button dropdown options" do
    = example do |c|
      - c.header do
        = button_dropdown "Dropdown right", state: :success, size: :lg, position: :right do |bd|
          - bd.link "Confirm action", url: '#action', link_html_options: { data: { confirm: 'Are you sure?' }}, method: :delete
          - bd.link "Another action", url: '#another-action'
          - bd.divider
          - bd.header 'Header'
          - bd.link "Separate link", url: '#separate-link'

        = button_dropdown "Dropup", state: :danger, size: :sm, type: :dropup do |bd|
          - bd.link "Action",  { url: '#action' }, { class: 'action' }
          - bd.link "Another action", url: '#another-action'
          - bd.divider
          - bd.header 'Header'
          - bd.link "Separate link", url: '#separate-link'

      - c.code do
        button_dropdown "Dropdown right", state: :success, size: :lg, position: :right do |bd|
          bd.link "Confirm action", url: '#action', link_html_options: { data: { confirm: 'Are you sure?' }}, method: :delete
          bd.link "Another action", url: '#another-action'
          bd.divider
          bd.header 'Header'
          bd.link "Separate link", url: '#separate-link'
        end
         
        button_dropdown "Dropup", state: :danger, size: :sm, type: :dropup do |bd|
          bd.link "Action",  { url: '#action' }, { class: 'action' }
          bd.link "Another action", url: '#another-action'
          bd.divider
          bd.header 'Header'
          bd.link "Separate link", url: '#separate-link'
        end
      - c.footer do
        = documentation_link 'Documentation', '#'

= @sections.render
