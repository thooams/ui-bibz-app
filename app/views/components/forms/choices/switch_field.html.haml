= title 'Switch Field'
%blockquote UiBibz::Ui::Core::Forms::Choices::SwitchField
%p.bd-callout= based_on link_to "Bootstrap Switch", "http://bootstrapswitch.com/", target: '_blank'

= code "ui_switch_field", component_name: "name"

= component_options do |co|
  - co.state_link
  - co.list 'value', types: %w(boolean string integer)
  - co.list 'label', types: 'string'
  - co.list 'intermediate', types: 'boolean'
  - co.list 'animate', types: 'boolean'
  - co.list 'left_text', types: 'string'
  - co.list 'right_text', types: 'string'
  - co.list 'middle_text', types: 'string'
  - co.list 'left_color', types: 'symbol', values: UiBibzApp::Application::STATUSES
  - co.list 'right_color', types: 'symbol', values: UiBibzApp::Application::STATUSES

= component_html_options do |cho|
  - cho.list 'readonly', types: 'boolean'
  - cho.list 'checked', types: 'boolean'

- @sections = sections do |s|
  - s.section title: "Switch Field" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplebasic'
      - e.code do
        ui_switch_field 'examplebasic'
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplebasic bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplebasic" id="examplebasic" class="switch">
          </div>
        </div>

  - s.section title: "State" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplestate', { state: 'active' }
        = ui_switch_field 'examplestate', { state: 'disabled' }
      - e.code do
        ui_switch_field 'examplestate', { state: 'active' }
        ui_switch_field 'examplestate', { state: 'disabled' }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplestate bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplestate" id="examplestate" class="switch">
          </div>
        </div>
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-disabled bootstrap-switch-id-examplestate bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplestate" id="examplestate" disabled="disabled" class="true switch">
          </div>
        </div>

  - s.section title: "Animate" do
    = example do |e|
      - e.header do
        = ui_switch_field 'exampleanimate', { animate: true }
        = ui_switch_field 'exampleanimate', { animate: false }
      - e.code do
        ui_switch_field 'exampleanimate', { animate: true }
        ui_switch_field 'exampleanimate', { animate: false }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-exampleanimate bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="exampleanimate" id="exampleanimate" data-animate="true" class="switch">
          </div>
        </div>
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-exampleanimate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="exampleanimate" id="exampleanimate" data-animate="false" class="switch">
          </div>
        </div>

  - s.section title: "Color" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplecolor', { left_color: :success, right_color: :danger }
      - e.code do
        ui_switch_field 'examplecolor', { left_color: :success, right_color: :danger }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplecolor bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-success" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-danger" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplecolor" id="examplecolor" data-on-color="success" data-off-color="danger" class="switch">
          </div>
        </div>

  - s.section title: "Text" do
    = example do |e|
      - e.header do
        = ui_switch_field 'exampletext', { left_text: "Yes", right_text: "No" }
      - e.code do
        ui_switch_field 'exampletext', { left_text: "Yes", right_text: "No" }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-id-exampletext bootstrap-switch-off bootstrap-switch-animate" style="width: 196px;">
          <div class="bootstrap-switch-container" style="width: 291px; margin-left: -97px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 97px;">Yes</span>
            <span class="bootstrap-switch-label" style="width: 97px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 97px;">No</span>
            <input type="checkbox" name="exampletext" id="exampletext" data-on-text="ExampleOn" data-off-text="ExampleOff" class="switch">
          </div>
        </div>

  - s.section title: "Label" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplelabel', { middle_text: "MyText" }
        = ui_switch_field 'examplelabel', { middle_text: ui_glyph('diamond') }
      - e.code do
        ui_switch_field 'examplelabel', { middle_text: 'MyText' }
        ui_switch_field 'examplelabel', { middle_text: ui_glyph('diamond') }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplelabel bootstrap-switch-animate" style="width: 124px;">
          <div class="bootstrap-switch-container" style="width: 174px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 70px;">MyText</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplelabel" id="examplelabel" data-label-text="MyText" class="switch">
          </div>
        </div>
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplelabel bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;"><i class="glyph fa fa-diamond"></i></span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplelabel" id="examplelabel" data-label-text="<i class=&quot;glyph fa fa-diamond&quot;></i>" class="switch">
          </div>
        </div>

  - s.section title: "Readonly" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplereadonly', {}, { readonly: true }
        = ui_switch_field 'examplereadonly', {}, { readonly: false }
      - e.code do
        ui_switch_field 'examplereadonly', {}, { readonly: true }
        ui_switch_field 'examplereadonly', {}, { readonly: false }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-readonly bootstrap-switch-id-examplereadonly bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplereadonly" id="examplereadonly" readonly="readonly" class="switch">
          </div>
        </div>
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplereadonly bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplereadonly" id="examplereadonly" class="switch">
          </div>
        </div>

  - s.section title: "Checked" do
    = example do |e|
      - e.header do
        = ui_switch_field 'examplechecked', {}, { checked: true }
        = ui_switch_field 'examplechecked', {}, { checked: false }
      - e.code do
        ui_switch_field 'examplechecked', {}, { checked: true }
        ui_switch_field 'examplechecked', {}, { checked: false }
      - e.html do
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-id-examplechecked bootstrap-switch-animate bootstrap-switch-off" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplechecked" id="examplechecked" checked="checked" class="switch">
          </div>
        </div>
        <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-off bootstrap-switch-id-examplechecked bootstrap-switch-animate" style="width: 106px;">
          <div class="bootstrap-switch-container" style="width: 156px; margin-left: -52px;">
            <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 52px;">ON</span>
            <span class="bootstrap-switch-label" style="width: 52px;">&nbsp;</span>
            <span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 52px;">OFF</span>
            <input type="checkbox" name="examplechecked" id="examplechecked" class="switch">
          </div>
        </div>

  - s.section title: "Size", tag: :h3 do
    %p The size can be be defined through the `size` option that has the following arguments :
    %ul
      - UiBibzApp::Application::SIZES.each do |size|
        %li= ":#{ size }"

    = example do |c|
      - c.header do
        = ui_switch_field 'Large switch', size: :lg
        = ui_switch_field 'Medium switch', size: :md
        = ui_switch_field 'Small switch', size: :sm
      - c.code do
        ui_button 'Large button', status: :primary, size: :lg
        ui_button 'Medium button', status: :primary, size: :md
        ui_button 'Small button', status: :primary, size: :sm
      - c.html do
        <button class="btn-primary btn btn-lg">Large button</button>
        <button class="btn-primary btn">Medium button</button>
        <button class="btn-primary btn btn-sm">Small button</button>

  - s.section title: "Simple form" do
    %p= simple_form_text_with_input "ui_switch_field"
    = example do |e|
      - e.header do
        - @user.active = true
        = ui_form_for(@user) do |f|
          = f.input :active, as: :ui_switch_field
      - e.code do
        ui_bibz_form_for(@user) do |f|
          ...
          f.input :active, as: :ui_switch_field
          ...
        end

= @sections.render
