= title 'Button toolbar'
%blockquote UiBibz::Ui::Core::Forms::Buttons::ButtonToolbar
%p.bd-callout Group a series of button group together on a single line with the button toolbar.

= code do
  :plain
    ui_button_toolbar options, html_options do |bt|
      bt.button_group options, html_options do |bg|
        bg.button content, options, html_options
        bg.button options, html_options do
          content
        end
      end
    end

= component_options do |co|
  - co.size_link
  - co.status_link

- @sections = sections do |s|
  - s.section title: "Button toolbar" do
    = example do |c|
      - c.header do
        = ui_button_toolbar do |bt|
          - bt.button_group space: 2  do |bg|
            - bg.button 1
            - bg.button 2
            - bg.button 3
          - bt.button_group space: 4  do |bg|
            - bg.button 4
            - bg.button 5
            - bg.button 6
          - bt.button_group do |bg|
            - bg.button 8
      - c.code do
        :plain
          ui_button_toolbar do |bt|
            bt.button_group space: 2 do |bg|
              bg.button 1
              bg.button 2
              bg.button 3
            end
            bt.button_group space: 4 do |bg|
              bg.button 4
              bg.button 5
              bg.button 6
            end
            bt.button_group do |bg|
              bg.button 8
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar" role="toolbar">
            <div class="btn-group mr-2" role="group">
              <button class="btn">1</button>
              <button class="btn">2</button>
              <button class="btn">3</button>
            </div>
            <div class="btn-group mr-4" role="group">
              <button class="btn">4</button>
              <button class="btn">5</button>
              <button class="btn">6</button>
            </div>
            <div class="btn-group" role="group">
              <button class="btn">8</button>
            </div>
          </div>

  - s.section title: "Justify" do
    = example do |c|
      - c.header do
        = ui_button_toolbar justify: true do |bt|
          - bt.button_group space: 2, status: :success  do |bg|
            - bg.button '', text: false, glyph: 'copy'
            - bg.button '', text: false, glyph: 'paste', status: :danger
            - bg.button '', text: false, glyph: 'cut'
          - bt.button_group space: 4  do |bg|
            - bg.button 4
            - bg.button 5
            - bg.dropdown 'Dropdown' do |d|
              - d.link 'link', url: '#link'
      - c.code do
        :plain
          ui_button_toolbar justify: true do |bt|
            bt.button_group space: 2, status: :success do |bg|
              bg.button '', text: false, glyph: 'copy'
              bg.button '', text: false, glyph: 'paste', status: :danger
              bg.button '', text: false, glyph: 'cut'
            end
            bt.button_group space: 4 do |bg|
              bg.button 4
              bg.button 5
              bg.dropdown 'Dropdown', do |d| 6
                d.link 'Link', url: '#link'
              end
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar" role="toolbar">
            <div class="btn-group mr-2" role="group">
              <button class="btn">1</button>
              <button class="btn">2</button>
              <button class="btn">3</button>
            </div>
            <div class="btn-group mr-4" role="group">
              <button class="btn">4</button>
              <button class="btn">5</button>
              <button class="btn">6</button>
            </div>
            <div class="btn-group" role="group">
              <button class="btn">8</button>
            </div>
          </div>


= @sections.render
