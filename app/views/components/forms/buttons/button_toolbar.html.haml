= title 'Button toolbar'
%blockquote UiBibz::Ui::Core::Forms::Buttons::ButtonToolbar
%p.bd-callout Group a series of button group together on a single line with the button toolbar.

= code do
  :plain
    ui_button_toolbar options, html_options do |bt|
      bt.button_group options, html_options do |bg|
        bg.button content, options, html_options
        bg.button options, html_options do
          content
        end
      end
    end

= component_options do |co|
  - co.size_link
  - co.status_link

- @sections = sections do |s|
  - s.section title: "Button toolbar" do
    = example do |c|
      - c.header do
        = ui_button_toolbar do |bt|
          - bt.button_group space: 2  do |bg|
            - bg.button 1
            - bg.button 2
            - bg.button 3
          - bt.button_group space: 4  do |bg|
            - bg.button 4
            - bg.button 5
            - bg.button 6
          - bt.button_group do |bg|
            - bg.button 8
      - c.code do
        :plain
          ui_button_toolbar do |bt|
            bt.button_group space: 2 do |bg|
              bg.button 1
              bg.button 2
              bg.button 3
            end
            bt.button_group space: 4 do |bg|
              bg.button 4
              bg.button 5
              bg.button 6
            end
            bt.button_group do |bg|
              bg.button 8
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar" role="toolbar">
            <div class="btn-group mr-2" role="group">
              <button class="btn">1</button>
              <button class="btn">2</button>
              <button class="btn">3</button>
            </div>
            <div class="btn-group mr-4" role="group">
              <button class="btn">4</button>
              <button class="btn">5</button>
              <button class="btn">6</button>
            </div>
            <div class="btn-group" role="group">
              <button class="btn">8</button>
            </div>
          </div>

  - s.section title: "Justify" do
    = example do |c|
      - c.header do
        = ui_button_toolbar justify: true do |bt|
          - bt.button_group space: 2  do |bg|
            - bg.button 1
            - bg.button 2
            - bg.button 3
          - bt.button_group space: 4  do |bg|
            - bg.button 4
            - bg.button 5
            - bg.dropdown 'Dropdown' do |d|
              - d.link 'link', url: '#link'
      - c.code do
        :plain
          ui_button_toolbar justify: true do |bt|
            bt.button_group space: 2 do |bg|
              bg.button 1
              bg.button 2
              bg.button 3
            end
            bt.button_group space: 4 do |bg|
              bg.button 4
              bg.button 5
              bg.dropdown 'Dropdown', do |d| 6
                d.link 'Link', url: '#link'
              end
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar" role="toolbar">
            <div class="btn-group mr-2" role="group">
              <button class="btn">1</button>
              <button class="btn">2</button>
              <button class="btn">3</button>
            </div>
            <div class="btn-group mr-4" role="group">
              <button class="btn">4</button>
              <button class="btn">5</button>
              <button class="btn">6</button>
            </div>
            <div class="btn-group" role="group">
              <button class="btn">8</button>
            </div>
          </div>


  - s.section title: "Status" do
    = component_list_options do |co|
      - co.status_link

    = example do |c|
      - c.header do
        = ui_button_group status: :success do |bg|
          - bg.button 'Left'
          - bg.button 'Middle'
          - bg.button 'Right'
      - c.code do
        ui_button_group status: :success do |bg|
          bg.button 'Left'
          bg.button 'Middle'
          bg.button 'Right'
        end
      - c.html do
        <div class="btn-group btn-group-sm" role="group">
          <button class="btn-primary btn">Left</button>
          <button class="btn-primary btn">Middle</button>
          <button class="btn-primary btn">Right</button>
        </div>

  - s.section title: "Size" do
    = component_list_options do |co|
      - co.size_link

    = example do |c|
      - c.header do
        = ui_button_group size: :sm do |bg|
          - bg.button 'Left'
          - bg.button 'Middle'
          - bg.button 'Right'
      - c.code do
        ui_button_group size: :sm do |bg|
          bg.button 'Left'
          bg.button 'Middle'
          bg.button 'Right'
        end
      - c.html do
        <div class="btn-group btn-group-sm" role="group">
          <button class="btn-primary btn">Left</button>
          <button class="btn-primary btn">Middle</button>
          <button class="btn-primary btn">Right</button>
        </div>


  - s.section title: "Position" do
    = component_list_options do |co|
      - co.list 'position', types: 'symbol', values: %w(:horizontal :vertical)
    = example do |c|
      - c.header do
        = ui_button_group position: :vertical do |bg|
          - bg.button 'Left'
          - bg.button 'Middle'
          - bg.button 'Right'
      - c.code do
        ui_button_group position: :vertical do |bg|
          bg.button 'Left'
          bg.button 'Middle'
          bg.button 'Right'
        end
      - c.html do
        <div class="btn-group-vertical" role="group">
          <button class="btn-primary btn">Left</button>
          <button class="btn-primary btn">Middle</button>
          <button class="btn-primary btn">Right</button>
        </div>

  - s.section title: "Nesting" do
    :markdown
      Button group has several block type:

      * [button](#{ components_forms_buttons_button_path })
      * [button_link](#{ components_forms_buttons_button_link_path })
      * [dropdown](#{ components_dropdowns_dropdown_path })
      * [input](#{ components_forms_simple_form_inputs_path }) (Use with simple form)

    = example do |c|
      - c.header do
        = ui_button_group status: :primary do |bg|
          - bg.button 'Dark', status: :dark
          - bg.button_link 'Link', url: '#button-link'
          - bg.dropdown "Dropdown" do |bd|
            - bd.link "Action", url: '#action'
            - bd.link "Another action", url: '#another-action'
            - bd.divider
            - bd.header 'Header'
            - bd.link "Separate link", url: '#separate-link'
      - c.code do
        ui_button_group status: :primary do |bg|
          bg.button 'Dark', status: :dark
          bg.button_link 'Link', url: '#button-link'
          bg.dropdown "Dropdown" do |bd|
            bd.link "Action", url: '#action'
            bd.link "Another action", url: '#another-action'
            bd.divider
            bd.header 'Header'
            bd.link "Separate link", url: '#separate-link'
          end
        end
      - c.html do
        :plain
          <div class="btn-group" role="group">
            <button class="btn-dark btn">Dark</button>
            <a class="btn-primary btn" role="button" href="#button-link">Link</a>
            <div class="dropdown btn-group">
              <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown
                <span class="caret"></span>
              </button>
              <div class="dropdown-menu dropdown-menu-left" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
                <a class="dropdown-item" href="#action">Action</a>
                <a class="dropdown-item" href="#another-action">Another action</a>
                <div class="dropdown-divider"></div>
                <h6 class="dropdown-header" role="presentation">Header</h6>
                <a class="dropdown-item" href="#separate-link">Separate link</a>
              </div>
            </div>
          </div>


= @sections.render
