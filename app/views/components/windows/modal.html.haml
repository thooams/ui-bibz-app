= title 'Modal'
%blockquote UiBibz::Ui::Core::Windows::Modal
%p.bd-callout ui_modals are streamlined, but flexible, dialog prompts with the minimum required functionality and smart defaults.

= code do
  :plain
    ui_modal options, html_options do |m|
      m.header content, options, html_options
      # or
      m.header options, html_options do
        content
      end

      m.body content, options, html_options
      # or
      m.body options, html_options do
        content
      end

      m.footer content, options, html_options
      # or
      m.footer options, html_options do
        content
      end
    end

= component_options do |co|
  - co.list 'effect', types: 'symbol', values: %w(:fade)

- @sections = sections do |s|
  - s.section title: "Modal" do
    :markdown
      ui_modal has several block type:

      * #{ inherit_component_link 'header' }
      * #{ inherit_component_link 'body' }
      * #{ inherit_component_link 'footer' }

    = example do |c|
      - c.header do
        = ui_modal class: 'modal-example' do |m|
          - m.header 'Modal title'
          - m.body 'One fine body'
          - m.footer do
            = ui_button 'Close', status: :secondary
            = ui_button 'Save changes'
      - c.code do
        ui_modal class: 'modal-example' do |m|
          m.header 'Modal itle'
          m.body 'One fine body'
          m.footer do
            button 'Close', status: :secondary
            button 'Save changes'
          end
        end
      - c.html do
        <div class="modal-example ui_modal">
          <div class="modal-dialog " role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Modal title</h4>
              </div>
              <div class="modal-body">One fine body</div>
              <div class="modal-footer">
                <button class="btn-secondary btn">Close</button>
                <button class="btn-primary btn">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      - c.footer do
        = documentation_link 'Documentation', '#'


  - s.section title: "Size" do
    = example do |c|
      - c.header do
        = ui_modal class: 'modal-example', size: :sm do |m|
          - m.header do
            = 'Modal title'
          - m.body do
            = 'One fine body'
      - c.code do
        ui_modal class: 'modal-example' do |m|
          m.header do
            'Modal itle'
          end
          m.body do
            'One fine body'
          end
        end
      - c.html do
        <div class="modal-example ui_modal">
          <div class="modal-dialog ui_modal-sm" role="document">
            <div class="modal-content"><div class="modal-header">
              <button class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
                <span class="sr-only">Close</span>
              </button>
              <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">One fine body</div>
            </div>
          </div>
        </div>
      - c.footer do
        = documentation_link 'Documentation', '#'

  - s.section title: "Effect" do
    = example do |c|
      - c.header do
        = ui_button_link 'click here', { url: '#' }, { data: { toggle: 'modal', target: '#modal-test' }}
        = ui_modal({ effect: :fade }, { id: 'modal-test' }) do |m|
          - m.header do
            = 'Modal title'
          - m.body do
            = 'One fine body'
      - c.code do
        ui_button_link 'click here', { url: '#' }, { data: { toggle: 'modal', target: '#modal-test' }}
        ui_modal({ effect: :fade }, { id: 'modal-test' }) do |m|
          m.header do
            'Modal itle'
          end
          m.body do
            'One fine body'
          end
        end
      - c.html do
        <a data-toggle="modal" data-target="#modal-test" class="btn-primary btn" href="#">click here</a>
        <div id="modal-test" class="fade ui_modal" style="display: none;">
          <div class="modal-dialog " role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span>
                  <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Modal title</h4>
              </div>
              <div class="modal-body">One fine body</div>
            </div>
          </div>
        </div>
      - c.footer do
        = documentation_link 'Documentation', '#'

= @sections.render
