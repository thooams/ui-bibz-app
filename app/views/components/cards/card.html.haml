      * #{ link_to 'list_group', components_list_group_path }

    = tap_warning

    = example do |e|
      - e.header do
        = ui_card_deck do |cd|
          - cd.card tap: true do |c|
            - c.header 'Header 1'
            - c.body 'Content 1'
            - c.footer 'Footer 1'
