    = example do |e|
      - e.header do
        = ui_card do
          = "Content 1"
        %br
        = ui_card "Content 2", { status: :info }, { class: 'my-card1'}
        %br
        = ui_card({ status: :success }, { class: 'my-card2'})  do
          = "Content 3"
      - e.code do
        ui_card do
          Content 1
        end
         
        ui_card "Content3", { status: :info }, { class: 'my-card1'}
         
        ui_card({ status: :success }, { class: 'my-card2'})  do
          "Content 3"
        end
      - e.html do
        <div class="card card-body">Content</div>
        <div class="my-card1 card-info card card-body">Content</div>
        <div class="my-card2 card-success card card-body">Content</div>
      - e.footer do
        = documentation_link 'Documentation', '#'

