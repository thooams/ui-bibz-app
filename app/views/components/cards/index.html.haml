= content_for :third_nav do
  %h2 Contents
  = nav class: 'secondary-nav' do |n|
    - n.link 'Button', url: '#button'
    - n.link 'Button options', url: '#button-options'
    - n.nav do |na|
      - na.link 'Outline', url: '#outline'
      - na.link 'Size', url: '#size'
      - na.link 'Type', url: '#type'
      - na.link 'Status', url: '#status'
    - n.link 'Options and html_options', url: '#options-and-html-options'

= section title: "Card" do
  = example do |e|
    - e.header do
      = card do
        = "Content"
    - e.code do
      card do
        Content
      end
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: "Card with header, block and footer" do
  = example do |e|
    - e.header do
      = card tap: true do |c|
        - c.header 'Header'
        - c.block 'Content'
        - c.footer 'Footer'
    - e.code do
      card tap: true do |c|
        c.header 'Header'
        c.block 'Content'
        c.footer 'Footer'
      end
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: "Image and block" do
  = example do |e|
    - e.header do
      = card tap: true do |c|
        - c.image 'image.svg'
        - c.block tap: true do |b|
          - b.title "Card title"
          - b.text "Some quick example text to build on the card title and make up the bulk of the card's content."
        - c.list_group do |lg|
          - lg.list "Cras justo odio"
          - lg.list "Dapibas ac facilisis in"
          - lg.list "vestibulum at eros"
        - c.block tap: true do |b|
          - b.link "Card link", url: '#', class: "card-link"
          - b.link "Card link", url: '#', class: "card-link"
    - e.code do
      card tap: true do |c|
        c.image 'image.svg'
        c.block tap: true do |b|
          b.title "Card title"
          b.text "Some quick example text to build on the card title and make up the bulk of the card's content."
        end
        c.list_group do |lg|
          lg.list "Cras justo odio"
          lg.list "Dapibas ac facilisis in"
          lg.list "vestibulum at eros"
        end
        c.block tap: true do |b|
          b.link "Card link", url: '#', class: "card-link"
          b.link "Card link", url: '#', class: "card-link"
        end
    - e.footer do
      = documentation_link 'Documentation', '#'

= section title: "Position" do
  = example do |e|
    - e.header do
      = card tap: true do |c|
        - c.block tap: true do |b|
          - b.title "Special title treatment"
          - b.text "With supporting text below as a natural lead-in to additional content."
          - b.link "Go somewhere", url: '#go-somewhere', class: 'btn btn-primary'

      = card tap: true, text_position: :center do |c|
        - c.block tap: true do |b|
          - b.title "Special title treatment"
          - b.text "With supporting text below as a natural lead-in to additional content."
          - b.link "Go somewhere", url: '#go-somewhere', class: 'btn btn-primary'

      = card tap: true, text_position: :right do |c|
        - c.block tap: true do |b|
          - b.title "Special title treatment"
          - b.text "With supporting text below as a natural lead-in to additional content."
          - b.link "Go somewhere", url: '#go-somewhere', class: 'btn btn-primary'
    - e.code do
      card tap: true do |c|
        c.block tap: true do |b|
          b.title "Special title treatment"
          b.text "With supporting text below as a natural lead-in to additional content."
