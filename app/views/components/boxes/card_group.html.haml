            end
          end
          cg.card do |c|
            c.list_group do |lg|
              lg.list "Cras justo odio"
              lg.list "Dapibas ac facilisis in", state: :active
              lg.list do |l|
                l.header "Header list"
                l.body "vestibulum at eros"
              end
            end
