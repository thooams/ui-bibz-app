%html
  %head
    = render "layouts/meta"
  %body
    = render "layouts/header"
    .pageheader
      = container do
        // Note : The image without the edges is more beautiful than the current
        //= image_tag 'ui-bibz-logo-without-border.png'
        = image_tag 'ui-bibz-logo', class: 'logo'
        = image_tag 'ruby-white.png', width: 50
        - @ui_bibz = UiBibzApp::Application::Gems::ui_bibz
        %h1= "#{ UiBibzApp::Application::NAME  } v#{ UiBibzApp::Application::VERSION }"
        %p
          = UiBibzApp::Application::DESCRIPTION
          %br
          = UiBibzApp::Application::SUMMARY
    = container do
      = row class: 'content' do
        = yield
    = render "layouts/footer"
