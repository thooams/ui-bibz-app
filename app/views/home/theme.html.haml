= ui_jumbotron do
  %h1 Bootstrap #{ UiBibzApp::Application::Gems.bootstrap.version } elements page example template
  %p A quick preview of everything Bootstrap has to offer.
  = ui_button_link "See Boostrap 4!" , { url: "http://v4-alpha.getbootstrap.com/" }, { target: '_blank' }

= ui_card_column do |cc|

  // Alert component
  - cc.card tap: true do |c|
    - c.header "Alerts"
    - c.block do
      - %w(success warning danger info).each do |s|
        = ui_alert s.titleize, status: s.to_sym, ui_glyph: 'diamond', closable: true
    - c.footer see_component components_alert_path

  // Breadcrumb component
  - cc.card tap: true do |c|
    - c.header "Breadcrumb"
    - c.block do
      = ui_breadcrumb store: User.all.limit(3), link_label: :email, link_url: "#/id/edit"

  // ui_button component
  - cc.card tap: true do |c|
    - c.header "Button"
    - c.block do
      - %w(primary secondary success warning danger info link).each do |s|
        = ui_button s.titleize, status: s.to_sym, ui_glyph: 'diamond'
    - c.block do
      - %w(primary secondary success warning info danger).each do |s|
        = ui_button s.titleize, status: s.to_sym, outline: true, ui_glyph: 'diamond'
    - c.block do
      - %w(lg md sm xs).each do |s|
        = ui_button "Button #{ s }", status: :primary, size: s.to_sym
    - c.block do
      = ui_button 'Block level ui_button', status: :primary, type: :block
      = ui_button 'Block level ui_button', status: :secondary, type: :block
    - c.block do
      = ui_button 'Primary', status: :primary, state: :active
      = ui_button 'Primary', status: :primary, state: :disabled
    - c.footer see_component components_forms_buttons_button_path



  // ui_button component
  - cc.card tap: true do |c|
    - c.header "Button Choice"
    - c.block do
      = ui_button_group do
        = ui_button_choice 'Checkbox 1', status: :primary, state: :active
        = ui_button_choice 'Checkbox 2', status: :primary
    - c.block do
      = ui_button_group do
        = ui_button_choice 'Radio 1', type: :radio, status: :success, state: :active
        = ui_button_choice 'Radio 2', type: :radio, status: :success
    - c.block do
      = ui_button_group do
        = ui_button_choice 'Radio 1', type: :radio, size: :lg, outline: true, status: :danger, state: :active
        = ui_button_choice 'Radio 2', type: :radio, size: :lg, outline: true, status: :danger
    - c.footer see_component components_forms_buttons_button_choice_path

  // Dropdown component
  - cc.card tap: true do |c|
    - c.header "Dropdown"
    - c.block do
      - %w(primary secondary success warning danger info).each do |s|
        = ui_dropdown s.titleize, ui_glyph: 'diamond', status: s.to_sym do |d|
          - d.link "Action", url: '#action', ui_glyph: 'diamond'
          - d.link "Another action", url: '#another-action'
          - d.divider
          - d.header 'Header'
          - d.html "     Normal Text"
          - d.link "Separate link", url: '#separate-link'
    - c.block do
      = ui_dropdown "Dropdown Right", size: :lg, position: :right, status: :success do |d|
        - d.link "Action", url: '#action', ui_glyph: 'diamond'
        - d.link "Another action", url: '#another-action'
        - d.divider
        - d.header 'Header'
        - d.html "     Normal Text"
        - d.link "Separate link", url: '#separate-link'
      = ui_dropdown "Dropdown Up", size: :sm, type: :dropup, status: :danger do |d|
        - d.link "Action", url: '#action', ui_glyph: 'diamond'
        - d.link "Another action", url: '#another-action'
        - d.divider
        - d.header 'Header'
        - d.html "     Normal Text"
        - d.link "Separate link", url: '#separate-link'
    - c.footer see_component components_dropdowns_dropdown_path

  // ui_button Group component
  - cc.card tap: true do |c|
    - c.header "Button Group"
    - c.block do
      = ui_button_group do
        = ui_button 'Button'
        = ui_button_link 'Button link', url: '#button-link'
        = ui_dropdown "Dropdown" do |bd|
          - bd.link "Action", url: '#action'
          - bd.link "Another action", url: '#another-action'
          - bd.divider
          - bd.header 'Header'
          - bd.link "Separate link", url: '#separate-link'
    - c.block do
      = ui_button_group size: :sm do
        = ui_button 'Left', outline: true
        = ui_button 'Middle', outline: true
        = ui_button 'Right', outline: true
    - c.block do
      = ui_button_group position: :vertical do
        = ui_button 'Left'
        = ui_button 'Middle'
        = ui_button 'Right'
    - c.footer see_component components_forms_buttons_button_group_path

  // ui_button link component
  - cc.card tap: true do |c|
    - c.header "Button link"
    - c.block do
      - %w(primary secondary success warning danger info link).each do |s|
        = ui_button_link s.titleize, url: "##{ s }", status: s.to_sym, ui_glyph: 'diamond'
    - c.block do
      - %w(primary secondary success warning info danger).each do |s|
        = ui_button s.titleize, url: "##{ s }", status: s.to_sym, outline: true, ui_glyph: 'diamond'
    - c.block do
      - %w(lg md sm xs).each do |s|
        = ui_button "Button #{ s }", url: "##{ s }", status: :primary, size: s.to_sym
    - c.block do
      = ui_button 'Block level ui_button', url: '#', status: :primary, type: :block
      = ui_button 'Block level ui_button', url: '#', status: :secondary, type: :block
    - c.block do
      = ui_button 'Primary', url: '#active', status: :primary, state: :active
      = ui_button 'Primary', url: '#disabled', status: :primary, state: :disabled
    - c.footer see_component components_forms_buttons_button_link_path

  // ui_button split dropdown component
  - cc.card tap: true do |c|
    - c.header "Split Dropdown"
    - c.block do
      - %w(primary secondary success warning danger info).each do |s|
        = ui_split_dropdown s.titleize, ui_glyph: 'diamond', status: s.to_sym do |d|
          - d.link "Action", url: '#action', ui_glyph: 'diamond'
          - d.link "Another action", url: '#another-action'
          - d.divider
          - d.header 'Header'
          - d.html "     Normal Text"
          - d.link "Separate link", url: '#separate-link'
    - c.block do
      = ui_split_dropdown "Split Dropdown Right", size: :lg, position: :right, status: :success do |d|
        - d.link "Action", url: '#action', ui_glyph: 'diamond'
        - d.link "Another action", url: '#another-action'
        - d.divider
        - d.header 'Header'
        - d.html "     Normal Text"
        - d.link "Separate link", url: '#separate-link'
      = ui_split_dropdown "Split Dropdown Up", size: :sm, type: :dropup, status: :danger do |d|
        - d.link "Action", url: '#action', ui_glyph: 'diamond'
        - d.link "Another action", url: '#another-action'
        - d.divider
        - d.header 'Header'
        - d.html "     Normal Text"
    - c.footer see_component components_dropdowns_split_dropdown_path

  // ui_glyph component
  - cc.card tap: true do |c|
    - c.header "Glyph"
    - c.block do
      - %w(primary secondary success warning danger info).each do |s|
        = ui_glyph 'diamond', status: s.to_sym
    - c.block do
      - 4.times do |i|
        = ui_glyph 'diamond', size: i
    - c.block do
      = ui_glyph 'square', stack: 2
      = ui_glyph 'diamond', stack: 1, status: :danger
    - c.block do
      = ui_glyph 'diamond', rotate: 90
      = ui_glyph 'diamond', rotate: 180
      = ui_glyph 'diamond', rotate: 270
    - c.footer see_component components_glyph_path


  // ui_badge component
  - cc.card tap: true do |c|
    - c.header "ui_badge"
    - c.block do
      - %w(primary default success warning danger info).each do |s|
        = ui_badge s.titleize, status: s.to_sym
    - c.block do
      - %w(primary default success warning danger info).each do |s|
        = ui_badge s.titleize, ui_glyph: 'diamond', status: s.to_sym, type: :pill
    - c.footer see_component components_badge_path

  // List group component
  - cc.card tap: true do |c|
    - c.header "List group"
    - c.block do
      = ui_list_group do |lg|
        - lg.list 'Cras justo odio', badge: 14
        - lg.list 'Dapibus ac facilisis in', ui_glyph: 'diamond'
        - lg.list 'Morbi leo risus', state: :active
        - lg.list 'Porta ac consectetur ac', state: :disabled
        - lg.list 'Vestibulum at eros', status: :success
      %br
      = ui_list_group  do |lg|
        - lg.list tap: true, state: :active do |l|
          - l.header 'List group item heading'
          - l.body 'Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.'
        - lg.list tap: true do |l|
          - l.header class: 'my-header' do
            = 'List group item heading'
          - l.body class: 'my-body' do
            = 'Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.'
        - lg.list tap: true do |l|
          - l.header 'List group item heading'
          - l.body 'Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.'
    - c.footer see_component components_list_group_path

  // Modal component
  - cc.card tap: true do |c|
    - c.header "Modal"
    - c.block do
      = ui_modal class: 'modal-example' do |m|
        - m.header 'Modal title'
        - m.body 'One fine body'
        - m.footer do
          = ui_button 'Close', status: :secondary
          = ui_button 'Save changes'
      = ui_modal class: 'modal-example', size: :sm do |m|
        - m.header do
          = 'Modal title'
        - m.body do
          = 'One fine body'
      = ui_button_link 'click here to open modal', { url: '#' }, { data: { toggle: 'modal', target: '#modal-test' }}
      = ui_modal({ effect: :fade }, { id: 'modal-test' }) do |m|
        - m.header do
          = 'Modal title'
        - m.body do
          = 'One fine body'
    - c.footer see_component components_windows_modal_path

  // Nav component
  - cc.card tap: true do |c|
    - c.header "Nav"
    - c.block do
      = ui_nav do |n|
        - n.link 'Active', url: '#active', state: :active
        - n.link url: '#link', class: 'my-link' do
          Link
        - n.nav do |na|
          - na.link 'Another link', url: '#another-link'
          - na.link 'Disabled', url: '#disabled', state: :disabled
        - n.link 'Another link 2', url: '#another-link2'
        - n.link 'Another link 3', url: '#another-link3'

    - c.block do
      = ui_nav type: :links do |n|
        - n.link 'Active', url: '#active', state: :active
        - n.link url: '#link', class: 'my-link' do
          Link
        - n.link 'Another link', url: '#another-link'
        - n.link 'Disabled', url: '#disabled', state: :disabled

    - c.block do
      = ui_nav type: :tabs do |n|
        - n.link 'Active', url: '#active', state: :active
        - n.dropdown 'Dropdown' do |d|
          - d.link "Action 1", url: '#action'
          - d.link url: '#another-action' do
            = "Action 2"
          - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
            = "Action 3"
        - n.link 'Another link', url: '#another-link'
        - n.link 'Disabled', url: '#disabled', state: :disabled
    - c.block do
      = ui_nav type: :pills do |n|
        - n.link 'Active', url: '#active', state: :active
        - n.dropdown 'Dropdown' do |d|
          - d.link "Action 1", url: '#action'
          - d.link url: '#another-action' do
            = "Action 2"
          - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
            = "Action 3"
        - n.link 'Another link', url: '#another-link'
        - n.link 'Disabled', url: '#disabled', state: :disabled
    - c.block do
      = ui_nav type: :pills, stacked: true do |n|
        - n.link 'Active', url: '#active', state: :active
        - n.link 'Link', url: '#link'
        - n.link 'Another link', url: '#another-link'
        - n.link 'Disabled', url: '#disabled', state: :disabled
    - c.block do
      = ui_nav type: :tabs do |n|
        - n.link 'Active', url: '#content1', state: :active
        - n.link 'Link', url: '#content2'
        - n.link 'Another link', url: '#content3'
        - n.link 'Disabled', url: '#content4', state: :disabled
      %br
      .tab-content
        = ui_card 'Content 1', { tab: true, state: :active }, { id: 'content1' }
        = ui_card 'Content 2', { tab: true, effect: :fade }, { id: 'content2' }
        = ui_card 'Content 3', { tab: true, effect: :fade }, { id: 'content3' }
        = ui_card 'Content 4', { tab: true }, { id: 'content4' }
    - c.footer see_component components_navs_nav_path

  // Navbar component
  - cc.card tap: true do |c|
    - c.header "Nav"
    - c.block do
      = ui_navbar title: 'Navbar' do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#active', state: :active
        - nb.form '#', { method: :get, type: :form_tag, position: :right } do
          = ui_text_field 'Search'
          = ui_button 'Search', status: :success, outline: true
    - c.block do
      = ui_navbar title: 'Navbar' do |nb|
        - nb.nav do |n|
          - n.link 'Home', url: '#active', state: :active
          - n.link url: '#link', class: 'my-link' do
            Features
          - n.link 'Pricing', url: '#another-link'
          - n.dropdown 'Dropdown' do |d|
            - d.link "Action 1", url: '#action'
            - d.link url: '#another-action' do
              = "Action 2"
            - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
              = "Action 3"
    - c.block do
      - %w(primary inverse success warning danger info).each do |s|
        = ui_navbar title: 'Navbar', status: s.to_sym do |nb|
          - nb.nav do |n|
            - n.link 'Home', url: '#active', state: :active
            - n.link url: '#link', class: 'my-link' do
              Features
            - n.link 'Pricing', url: '#another-link'
            - n.dropdown 'Dropdown' do |d|
              - d.link "Action 1", url: '#action'
              - d.link url: '#another-action' do
                = "Action 2"
              - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
                = "Action 3"
        %br
      - %w(primary inverse success warning danger info).each do |s|
        = ui_navbar title: 'Navbar', status: s.to_sym, type: :dark do |nb|
          - nb.nav do |n|
            - n.link 'Home', url: '#active', state: :active
            - n.link url: '#link', class: 'my-link' do
              Features
            - n.link 'Pricing', url: '#another-link'
            - n.dropdown 'Dropdown' do |d|
              - d.link "Action 1", url: '#action'
              - d.link url: '#another-action' do
                = "Action 2"
              - d.link({ url: '#separate-link'}, { class: 'my-link'}) do
                = "Action 3"
        %br
    - c.footer see_component components_navs_navbar_path

  // Progress component
  - cc.card tap: true do |c|
    - c.header "Progress"
    - c.block do
      - [[:secondary, 0], [:success, 20], [:primary, 40], [:info, 60], [:warning, 80], [:danger, 100]].each do |i|
        = ui_progress i[1], status: i[0].to_sym
    - c.block do
      - [[:secondary, 0], [:success, 20], [:primary, 40], [:info, 60], [:warning, 80], [:danger, 100]].each do |i|
        = ui_progress i[1], status: i[0].to_sym, striped: true, animated: true
    - c.footer see_component components_progress_path

  // ui_stars component
  - cc.card tap: true do |c|
    - c.header "Star"
    - c.block do
      - %i(xs sm md lg).each do |i|
        = ui_star 4, size: i
        %br
    - c.block do
      - [[:secondary, 0], [:success, 1], [:primary, 2], [:info, 3], [:warning, 4], [:danger, 5]].each do |i|
        = ui_star i[1], status: i[0].to_sym
        %br
    - c.block do
      = ui_star 3.5
      %br
      = ui_star 6, num: 8
    - c.footer see_component components_star_path

  // Forms components
  - cc.card tap: true do |c|
    - c.header "Forms"
    - c.block do
      %label auto_complete_field
      = ui_auto_complete_field 'example1', { option_tags: options_for_select(5.times.map{ |i| "option #{i}" }) }, { placeholder: 'Type option..' }
    - c.block do
      %label dropdown_select_field
      = ui_dropdown_select_field 'example1', searchable: true, option_tags: options_for_select(5.times.map{ |i| "option #{i}" })
    - c.block do
      %label date_picker_field
      = ui_date_picker_field 'range', range: ui_glyph('calendar-minus-o'), append: ui_glyph('car'), prepend: ui_glyph('pencil')
    - c.block do
      %label formula_field
      = ui_formula_field 'value', {}, { placeholder: 'Type your formula...(2+3/2)'}
    - c.block do
      %label markdown_editor_field
      = ui_markdown_editor_field 'comments'
    - c.block do
      %label multi_column_field
      - grouped_options = { 'North America' => [['United statuss','US'], 'Canada'], 'Europe' => ['Denmark','Germany','France'] }
      = ui_multi_column_field 'example', { option_tags: grouped_options_for_select(grouped_options), searchable: true, selectable_opt_group: true }
    - c.block do
      %label multi_select_field
      %br
      - grouped_options = { 'North America' => [['United statuss','US'], 'Canada'], 'Europe' => ['Denmark','Germany','France'] }
      = ui_multi_select_field 'example', select_all_option: true, searchable: true, collapsible_opt_group: true, option_tags: grouped_options_for_select(grouped_options)
    - c.block do
      %label text_field
      = text_field 'search', { append: ui_glyph('pencil'), prepend: ui_glyph('camera-retro') }, { placeholder: 'Type your search...' }
    - c.block do
      %label switch_field
      %br
      = ui_switch_field 'examplecolor'
    - c.block do
      %label input file
      %label.custom-file
        = file_field_tag :file, class: 'custom-file-input'
        %span.custom-file-control
    - c.block do
      = ui_row do
        = ui_col num: 6 do
          %label checkbox_field
          - UiBibzApp::Application::STATUSES.each do |status|
            = ui_checkbox_field eval(status), { status: eval(status), checked: true, inline: true }
        = ui_col num: 6 do
          %label radio_field
          - UiBibzApp::Application::STATUSES.each_with_index do |status, i|
            = ui_radio_field :status, { value: status, label: eval(status), status: eval(status), inline: true, checked: i == 0 }

