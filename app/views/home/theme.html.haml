// Table component
= ui_card tap: true do |c|
  - c.header "Table"
  - c.block do
    = ui_col num: 6 do
      = ""
    = ui_col num: 6 do
      = ui_table_search_field store: @users
    = ui_table({ store: @users, tap: true }) do |b|
      - b.columns do |cls|
        - cls.column :id
        - cls.column :email
        - cls.column :active
        - cls.column :company
        - cls.column :created_at
